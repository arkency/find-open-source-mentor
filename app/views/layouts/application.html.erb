<!DOCTYPE html>
<html>
  <head>
    <!-- As a heading -->
    <title>FindOpenSourceMentor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <%= render "layouts/navbar" %>
  </head>

  <body>
    <p class="notice">
      <%= notice %>
    </p>
    <p class="alert">
      <%= alert %>
    </p>

    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
